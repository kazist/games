{# empty Twig template #}
{% import "form.macro.twig" as forms %}

{{ set_assets('applications/Games/assets/css/game.css') }}

<h1 class="component-header">{{ item.title }}</h1>

<div class="business-posted-date">
    <i class="fa fa-clock-o"></i> Posted:  {{ item.date_created|date('d M Y H:i') }} &nbsp;&nbsp;
</div>

<p>
    <i>
        {{ item.controls }}
    </i>
</p>

<div class="single-game">
    <object classid="clsid:D27CDB6E-AE6D-11cf-96B8-444553540000" codebase="http://fpdownload.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=8,0,0,0" width="100%" height="100%">
        <param name="movie" value="flashmovie.swf" />
        <param name="quality" value="high" />
        <PARAM NAME="SCALE" VALUE="exactfit">
        <embed src="{{ item.swf_file_file }}" quality="high" type="application/x-shockwave-flash" width="100%" height="100%" SCALE="exactfit" pluginspage="http://www.macromedia.com/go/getflashplayer" />
    </object>
</div>

<h4> {{ item.title }}:- Description </h4>
<p>
    {{ item.description }}
</p>
